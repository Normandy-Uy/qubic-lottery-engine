# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/qubic_lottery"

# Development Settings
NODE_ENV=development
PORT=5000

# Session Configuration  
SESSION_SECRET="your-secure-session-secret-here"

# CORS Settings
CORS_ORIGIN="http://localhost:3000"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Qubic Blockchain Settings (if applicable)
QUBIC_NODE_URL="https://qubic-node-endpoint.com"
QUBIC_CONTRACT_ADDRESS="CONTRACTADDRESSABCDEFGHIJKLMNOPQRSTUVWXYZ1234567890AB"

# External APIs (for price feeds)
COINGECKO_API_KEY="your-coingecko-api-key"
BINANCE_API_URL="https://api.binance.com/api/v3"

# Monitoring & Logging
LOG_LEVEL="info"
SENTRY_DSN="https://your-sentry-dsn-here"

# Email Configuration (for notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# Redis (for session store in production)
REDIS_URL="redis://localhost:6379"

# Security Settings
BCRYPT_ROUNDS=12
JWT_SECRET="your-jwt-secret-here"
JWT_EXPIRES_IN="24h"

